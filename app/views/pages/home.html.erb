<div class="jumbo">
  <div class="filter-black flex-container">
    <div class="flex-item text-center">
      <h1>Welcome to the world of fruit juices</h1>
      <%= link_to 'Explore', juices_path, { :class => "btn btn-primary" } %>
      <%= link_to 'Create your own', new_juice_path, { :class => "btn btn-success" } %>
      <div class="scroll-down floating"><i class="fa fa-angle-down" aria-hidden="true"></i>
    </div>
  </div>
</div>

</div>
<div class="best container">
  <div class="row">
    <h2>Our Best Juices</h2>
    <% @juices.each do |j| %>
      <div class="col-md-4">
       <%= link_to j do %>
        <div class="text-center">
          <%= j.name %>
        </div>
       <% end %>
      </div>
    <% end %>
  </div>
</div>

